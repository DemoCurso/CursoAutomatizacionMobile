<?xml version="1.0" encoding="utf-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="layout">%d [%t] %-5level %logger - %m%n</Property>
        <Property name="fileName">src/test/resources/logs/app.log</Property>
        <Property name="filePattern">logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz</Property>
        <Property name="logMaxSize">10 MB</Property>
    </Properties>

    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="${layout}" />
        </Console>
        <RollingFile name="LogToRollingFile" fileName="${fileName}" filePattern="${filePattern}">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="${logMaxSize}"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="definitions" level="info" additivity="false" >
            <AppenderRef ref="LogToConsole" />
            <AppenderRef ref="LogToRollingFile" />
        </Logger>
        <Logger name="pageobjects" level="info" additivity="false" >
            <AppenderRef ref="LogToConsole" />
            <AppenderRef ref="LogToRollingFile" />
        </Logger>
        <Logger name="utils" level="debug" additivity="false" >
            <AppenderRef ref="LogToConsole" />
            <AppenderRef ref="LogToRollingFile" />
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToConsole" />
            <AppenderRef ref="LogToRollingFile" />
        </Root>
    </Loggers>
</Configuration>

